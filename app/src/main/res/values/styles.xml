<resources>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffdb5a</item>
        <item name="colorPrimaryDark">#ffdb5a</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HasActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffdb5a</item>
        <item name="colorPrimaryDark">#ffdb5a</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ActionbarStyle</item>
    </style>

    <style name="ActionbarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>
    <style name="ActionBarTitleStyle">
        <item name="android:textColor">#030303</item>
    </style>

</resources>
